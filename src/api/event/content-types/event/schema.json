{
  "kind": "collectionType",
  "collectionName": "events",
  "info": {
    "singularName": "event",
    "pluralName": "events",
    "displayName": "Event"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "title"
    },
    "description": {
      "type": "blocks",
      "required": true
    },
    "event_date": {
      "type": "datetime"
    },
    "end_date": {
      "type": "datetime"
    },
    "location": {
      "type": "string"
    },
    "featured_image": {
      "type": "media",
      "multiple": false,
      "allowedTypes": [
        "images"
      ]
    },
    "gallery": {
      "type": "media",
      "multiple": true,
      "allowedTypes": [
        "images"
      ]
    },
    "price": {
      "type": "decimal",
      "min": 0
    },
    "is_free": {
      "type": "boolean",
      "default": false
    },
    "organizer": {
      "type": "string"
    },
    "contact_info": {
      "type": "text"
    },
    "published": {
      "type": "boolean",
      "default": false
    }
  }
}
