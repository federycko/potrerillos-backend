{
  "kind": "collectionType",
  "collectionName": "activities",
  "info": {
    "singularName": "activity",
    "pluralName": "activities",
    "displayName": "Activity"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "slug": {
      "type": "uid",
      "targetField": "name"
    },
    "description": {
      "type": "richtext",
      "required": true
    },
    "category": {
      "type": "enumeration",
      "enum": [
        "deportes-agua",
        "  montana",
        "  aventura",
        "  cultura",
        "  pesca",
        "  turismo"
      ]
    },
    "difficulty": {
      "type": "enumeration",
      "enum": [
        "facil",
        "moderado",
        "dificil",
        "experto"
      ]
    },
    "duration": {
      "type": "decimal"
    },
    "price_from": {
      "type": "decimal",
      "min": 0
    },
    "price_to": {
      "type": "decimal"
    },
    "featured_image": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "images"
      ]
    },
    "gallery": {
      "type": "media",
      "multiple": true,
      "allowedTypes": [
        "images"
      ]
    },
    "location": {
      "type": "string"
    },
    "highlights": {
      "type": "json"
    },
    "included": {
      "type": "richtext"
    },
    "requirements": {
      "type": "richtext"
    },
    "published": {
      "type": "boolean",
      "default": false
    },
    "provider": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::microsite.microsite",
      "inversedBy": "activities"
    }
  }
}
