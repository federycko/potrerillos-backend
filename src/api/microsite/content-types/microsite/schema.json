{
  "kind": "collectionType",
  "collectionName": "microsites",
  "info": {
    "singularName": "microsite",
    "pluralName": "microsites",
    "displayName": "Microsite"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "slug": {
      "type": "uid",
      "targetField": "name"
    },
    "description": {
      "type": "richtext",
      "required": true
    },
    "logo": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "cover_image": {
      "type": "media",
      "multiple": true,
      "allowedTypes": [
        "images"
      ]
    },
    "subscription_plan": {
      "type": "enumeration",
      "default": "basico",
      "enum": [
        "basico",
        "premium"
      ]
    },
    "theme_color": {
      "type": "string",
      "default": "#0066cc"
    },
    "contact_email": {
      "type": "email",
      "required": true
    },
    "contact_phone": {
      "type": "string"
    },
    "whatsapp": {
      "type": "string"
    },
    "facebook": {
      "type": "string"
    },
    "instagram": {
      "type": "string"
    },
    "website": {
      "type": "string"
    },
    "address": {
      "type": "text"
    },
    "location": {
      "type": "string"
    },
    "is_active": {
      "type": "boolean",
      "default": true
    },
    "featured": {
      "type": "boolean",
      "default": false
    },
    "custom_pages": {
      "type": "json"
    },
    "activities": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::activity.activity",
      "mappedBy": "provider"
    },
    "accommodations": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::accommodation.accommodation",
      "mappedBy": "microsite"
    },
    "banners": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::banner.banner",
      "mappedBy": "microsite"
    }
  }
}
